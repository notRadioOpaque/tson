#!/bin/sh

# Validate commit message follows conventional commits format
commit_msg=$(cat "$1")

# Pattern for conventional commits: type(scope?): description
pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(<scope>): <description>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat: add support for BigInt serialization"
  echo "  fix(storage): handle null values correctly"
  echo "  docs: update README with examples"
  echo ""
  exit 1
fi
