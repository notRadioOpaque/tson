{
  "name": "@tson/validation",
  "version": "0.1.0",
  "description": "Runtime validation system with built-in validators and plugin adapters",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/**/*.test.ts"
  },
  "keywords": [
    "validation",
    "schema",
    "typescript",
    "zod",
    "yup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tson/core": "workspace:*"
  },
  "peerDependencies": {
    "zod": "^3.22.0",
    "yup": "^1.3.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "yup": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.0",
    "zod": "^3.22.0",
    "yup": "^1.3.0"
  }
}
